<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left">

    <ImageView
        android:id="@+id/video_click_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/ic_video_play"
        android:padding="@dimen/text_padding"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/video_click_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center_horizontal"
        android:text="@string/trailer_text"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@+id/video_click_image"
        app:layout_constraintLeft_toRightOf="@id/video_click_image"
        app:layout_constraintTop_toTopOf="@id/video_click_image" />
</android.support.constraint.ConstraintLayout>